<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="service.tinyhtpc.switch"
       name="PiPUB Power switch."
       version="1.0.0"
       provider-name="TinyHTPC.co.nz">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.service"
             library="default.py">
        <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Script to control TinyHTPC PiPUB Power switch.</summary>
    <description>
TinyHTPC PiPUB Power switch allows shutdown of the Raspberry Pi via IR remote.
You require a TinyHTPC Pi PUB in order for this to work.

Thanks to http://mausberrycircuits.com for their scripts.
    </description>
    <disclaimer>

    </disclaimer>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repository.tinyhtpc.xbmc-rpi-addons" name="TinyHTPC XBMC Add-on Repository" version="1.0.0" provider-name="TinyHTPC.co.nz">
    <extension point="xbmc.addon.repository" name="TinyHTPC XBMC Add-on Repository">
        <info compressed="false">https://raw.githubusercontent.com/TinyHTPC/xbmc-rpi-addons/master/addons.xml</info>
        <checksum>https://raw.githubusercontent.com/TinyHTPC/xbmc-rpi-addons/master/addons.xml.md5</checksum>
        <datadir zip="true">https://raw.githubusercontent.com/TinyHTPC/xbmc-rpi-addons/master/repo</datadir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Install TinyHTPC Addons</summary>
        <description>Download and install addons by TinyHTPC</description>
        <platform>all</platform>
    </extension>
</addon>
</addons>
